{
  "include": ["components/**/*", "pages/**/*", "layouts/**/*", "plugins/**/*", "store/**/*", "utils/**/*", "composables/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "typeAcquisition": {
    "enable": true
  }
}
